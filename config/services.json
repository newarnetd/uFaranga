{
  "project": {
    "name": "uFaranga",
    "version": "1.0.0",
    "description": "Plateforme de paiement mobile - Architecture microservices"
  },
  "environments": {
    "development": {
      "domain": "localhost",
      "protocol": "http"
    },
    "staging": {
      "domain": "staging.ufaranga.com",
      "protocol": "https"
    },
    "production": {
      "domain": "api.ufaranga.com",
      "protocol": "https"
    }
  },
  "services": {
    "frontend": {
      "back-office": {
        "name": "Back Office",
        "description": "Interface d'administration React + Vite",
        "port": 3000,
        "path": "/admin",
        "technology": "React + Vite",
        "urls": {
          "development": "http://localhost:3000",
          "staging": "https://admin-staging.ufaranga.com",
          "production": "https://admin.ufaranga.com"
        }
      },
      "front-office": {
        "name": "Front Office",
        "description": "Application web client Next.js",
        "port": 3001,
        "path": "/",
        "technology": "Next.js",
        "urls": {
          "development": "http://localhost:3001",
          "staging": "https://app-staging.ufaranga.com",
          "production": "https://app.ufaranga.com"
        }
      },
      "mobile": {
        "name": "Mobile App",
        "description": "Application mobile Flutter",
        "technology": "Flutter",
        "platforms": ["Android", "iOS", "Web"],
        "urls": {
          "web": "http://localhost:3002"
        }
      }
    },
    "backend": {
      "node-services": {
        "api-gateway": {
          "name": "API Gateway",
          "description": "Point d'entrée unique, routage, authentification",
          "port": 3000,
          "path": "/api/v1",
          "technology": "Node.js + Express",
          "urls": {
            "development": "http://localhost:3000",
            "staging": "https://gateway-staging.ufaranga.com",
            "production": "https://api.ufaranga.com"
          },
          "health_check": "/health",
          "docs": "/api/docs"
        },
        "notification-service": {
          "name": "Notification Service",
          "description": "Notifications push, SMS, email",
          "port": 3001,
          "path": "/notifications",
          "technology": "Node.js + Kafka",
          "urls": {
            "development": "http://localhost:3001",
            "staging": "https://notifications-staging.ufaranga.com",
            "production": "https://notifications.ufaranga.com"
          },
          "health_check": "/health",
          "internal": true
        },
        "websocket-service": {
          "name": "WebSocket Service",
          "description": "Connexions temps réel",
          "port": 3002,
          "path": "/ws",
          "technology": "Node.js + Socket.io",
          "urls": {
            "development": "http://localhost:3002",
            "staging": "https://ws-staging.ufaranga.com",
            "production": "https://ws.ufaranga.com"
          },
          "health_check": "/health"
        }
      },
      "django-services": {
        "user-service": {
          "name": "User Service",
          "description": "Gestion utilisateurs, authentification",
          "port": 8000,
          "path": "/api/v1/users",
          "technology": "Django + DRF",
          "urls": {
            "development": "http://localhost:8000",
            "staging": "https://users-staging.ufaranga.com",
            "production": "https://users.ufaranga.com"
          },
          "health_check": "/health",
          "docs": "/api/docs/",
          "admin": "/admin/"
        },
        "wallet-service": {
          "name": "Wallet Service",
          "description": "Gestion portefeuilles, soldes",
          "port": 8001,
          "path": "/api/v1/wallets",
          "technology": "Django + DRF",
          "urls": {
            "development": "http://localhost:8001",
            "staging": "https://wallets-staging.ufaranga.com",
            "production": "https://wallets.ufaranga.com"
          },
          "health_check": "/health",
          "docs": "/api/docs/",
          "admin": "/admin/"
        },
        "kyc-service": {
          "name": "KYC Service",
          "description": "Vérification d'identité",
          "port": 8002,
          "path": "/api/v1/kyc",
          "technology": "Django + DRF",
          "urls": {
            "development": "http://localhost:8002",
            "staging": "https://kyc-staging.ufaranga.com",
            "production": "https://kyc.ufaranga.com"
          },
          "health_check": "/health",
          "docs": "/api/docs/",
          "admin": "/admin/"
        },
        "admin-service": {
          "name": "Admin Service",
          "description": "Back-office, rapports",
          "port": 8003,
          "path": "/api/v1/admin",
          "technology": "Django + DRF",
          "urls": {
            "development": "http://localhost:8003",
            "staging": "https://admin-api-staging.ufaranga.com",
            "production": "https://admin-api.ufaranga.com"
          },
          "health_check": "/health",
          "docs": "/api/docs/",
          "admin": "/admin/"
        }
      },
      "spring-services": {
        "transaction-service": {
          "name": "Transaction Service",
          "description": "Transactions critiques, ACID",
          "port": 9000,
          "path": "/api/v1/transactions",
          "technology": "Spring Boot",
          "urls": {
            "development": "http://localhost:9000",
            "staging": "https://transactions-staging.ufaranga.com",
            "production": "https://transactions.ufaranga.com"
          },
          "health_check": "/actuator/health",
          "docs": "/swagger-ui.html",
          "metrics": "/actuator/prometheus"
        },
        "fraud-detection-service": {
          "name": "Fraud Detection Service",
          "description": "Détection fraude ML",
          "port": 9001,
          "path": "/api/v1/fraud",
          "technology": "Spring Boot + ML",
          "urls": {
            "development": "http://localhost:9001",
            "staging": "https://fraud-staging.ufaranga.com",
            "production": "https://fraud.ufaranga.com"
          },
          "health_check": "/actuator/health",
          "docs": "/swagger-ui.html",
          "metrics": "/actuator/prometheus",
          "internal": true
        },
        "banking-integration-service": {
          "name": "Banking Integration Service",
          "description": "Connexion systèmes bancaires",
          "port": 9002,
          "path": "/api/v1/banking",
          "technology": "Spring Boot + ISO8583",
          "urls": {
            "development": "http://localhost:9002",
            "staging": "https://banking-staging.ufaranga.com",
            "production": "https://banking.ufaranga.com"
          },
          "health_check": "/actuator/health",
          "docs": "/swagger-ui.html",
          "internal": true
        },
        "settlement-service": {
          "name": "Settlement Service",
          "description": "Réconciliation bancaire",
          "port": 9003,
          "path": "/api/v1/settlement",
          "technology": "Spring Boot + Batch",
          "urls": {
            "development": "http://localhost:9003",
            "staging": "https://settlement-staging.ufaranga.com",
            "production": "https://settlement.ufaranga.com"
          },
          "health_check": "/actuator/health",
          "docs": "/swagger-ui.html",
          "internal": true
        }
      }
    },
    "infrastructure": {
      "databases": {
        "postgresql": {
          "name": "PostgreSQL",
          "description": "Base de données principale",
          "port": 5432,
          "technology": "PostgreSQL 15",
          "urls": {
            "development": "postgresql://admin:secret123@localhost:5432",
            "staging": "postgresql://user:pass@staging-db.ufaranga.com:5432",
            "production": "postgresql://user:pass@prod-db.ufaranga.com:5432"
          },
          "databases": [
            "ufaranga_users",
            "ufaranga_wallets", 
            "ufaranga_kyc",
            "ufaranga_transactions",
            "ufaranga_admin"
          ]
        },
        "mongodb": {
          "name": "MongoDB",
          "description": "Documents et logs",
          "port": 27017,
          "technology": "MongoDB 6",
          "urls": {
            "development": "mongodb://admin:secret123@localhost:27017",
            "staging": "mongodb://user:pass@staging-mongo.ufaranga.com:27017",
            "production": "mongodb://user:pass@prod-mongo.ufaranga.com:27017"
          }
        },
        "redis": {
          "name": "Redis",
          "description": "Cache et sessions",
          "port": 6379,
          "technology": "Redis 7",
          "urls": {
            "development": "redis://localhost:6379",
            "staging": "redis://staging-redis.ufaranga.com:6379",
            "production": "redis://prod-redis.ufaranga.com:6379"
          }
        }
      },
      "messaging": {
        "kafka": {
          "name": "Apache Kafka",
          "description": "Message queue",
          "port": 9092,
          "technology": "Kafka 7.4",
          "urls": {
            "development": "localhost:9092",
            "staging": "staging-kafka.ufaranga.com:9092",
            "production": "prod-kafka.ufaranga.com:9092"
          },
          "topics": [
            "transaction.initiated",
            "transaction.completed", 
            "transaction.failed",
            "user.registered",
            "user.kyc.updated",
            "notification.send",
            "fraud.detected"
          ]
        },
        "zookeeper": {
          "name": "Apache Zookeeper",
          "description": "Kafka coordination",
          "port": 2181,
          "technology": "Zookeeper",
          "urls": {
            "development": "localhost:2181",
            "staging": "staging-zk.ufaranga.com:2181",
            "production": "prod-zk.ufaranga.com:2181"
          },
          "internal": true
        }
      },
      "monitoring": {
        "prometheus": {
          "name": "Prometheus",
          "description": "Métriques",
          "port": 9090,
          "technology": "Prometheus",
          "urls": {
            "development": "http://localhost:9090",
            "staging": "https://metrics-staging.ufaranga.com",
            "production": "https://metrics.ufaranga.com"
          }
        },
        "grafana": {
          "name": "Grafana",
          "description": "Dashboards",
          "port": 3000,
          "technology": "Grafana",
          "urls": {
            "development": "http://localhost:3000",
            "staging": "https://dashboards-staging.ufaranga.com",
            "production": "https://dashboards.ufaranga.com"
          },
          "credentials": {
            "development": {
              "username": "admin",
              "password": "admin123"
            }
          }
        },
        "elasticsearch": {
          "name": "Elasticsearch",
          "description": "Logs centralisés",
          "port": 9200,
          "technology": "Elasticsearch",
          "urls": {
            "development": "http://localhost:9200",
            "staging": "https://logs-staging.ufaranga.com",
            "production": "https://logs.ufaranga.com"
          }
        },
        "kibana": {
          "name": "Kibana",
          "description": "Interface logs",
          "port": 5601,
          "technology": "Kibana",
          "urls": {
            "development": "http://localhost:5601",
            "staging": "https://kibana-staging.ufaranga.com",
            "production": "https://kibana.ufaranga.com"
          }
        }
      }
    }
  },
  "port_ranges": {
    "frontend": "3000-3099",
    "node_services": "3000-3999", 
    "django_services": "8000-8999",
    "spring_services": "9000-9999",
    "databases": "5000-5999",
    "monitoring": "9090-9199"
  },
  "reserved_ports": [
    3000, 3001, 3002,
    8000, 8001, 8002, 8003,
    9000, 9001, 9002, 9003,
    5432, 6379, 27017,
    9090, 9092, 2181, 9200, 5601
  ]
}