# API Gateway Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# Redis
REDIS_URL=redis://localhost:6379

# Service URLs
USER_SERVICE_URL=http://localhost:8000
WALLET_SERVICE_URL=http://localhost:8001
TRANSACTION_SERVICE_URL=http://localhost:9000
KYC_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:3001
FRAUD_DETECTION_SERVICE_URL=http://localhost:9001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100